<div class="media-content">
  <div class="content">
    <p>
      {{article-info '' document.title document.authors document.journal.title document.volume document.pages document.year }}
      <br>
      {{#each document.tags as |tag|}}
        {{tag-label tag}}
      {{/each}}
      {{#link-to 'articles.edit' document class="icon is-small"}}
        {{fa-icon "pencil"}}
      {{/link-to}}
    </p>
  </div>
</div>
<div class="media-right has-text-centered">
  {{#each document.files as |file|}}
    {{#if file.public}}
      {{file-icon-link file}}
    {{else}}
      {{#if session.isAuthenticated}}
        {{file-icon-link file}}
      {{/if}}
    {{/if}}
  {{/each}}
</div>
